<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/text_prediction_padding"
    android:focusable="true"
    android:clickable="true"
    android:background="?attr/selectableItemBackground">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_location_city"
        android:id="@+id/location_result_icon"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/location_result_icon"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_prediction_size"
        android:id="@+id/location_result_title"/>

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="@dimen/text_prediction_subtitle"
        android:id="@+id/location_result_subtitle"
        android:layout_toEndOf="@id/location_result_icon"
        android:layout_below="@id/location_result_title"/>
</RelativeLayout>